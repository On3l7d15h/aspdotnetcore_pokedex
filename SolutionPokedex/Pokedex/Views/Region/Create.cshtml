@*Strong Typed*@
@model Application.ViewModels.SaveRegionViewModel
@{
    ViewData["Title"] = "Start";
}

<section>
    <div class="flex flex-col justify-start items-center h-[82.65vh]">
        <!-- Created Pokemons -->
        <h1 class="text-4xl text-center font-bold my-5">Pokedex</h1>
        <section class="w-[30rem] h-[13.75rem] rounded shadow bg-white  flex flex-col justify-start overflow-hidden">
            <div class="bg-red-400 text-center py-3 text-2xl text-white w-full">
                <h1>Add new Region</h1>
            </div>
            <form method="post" asp-controller="Region" asp-action="Create">
                <div class="flex flex-col w-[25rem] mx-auto my-2">
                    <label asp-for="Name" class="text-lg my-1">Pokemon Name <span asp-validation-for="Name" class="text-red-400 text-sm"></span></label>
                    <input asp-for="Name" type="text" class="rounded p-[.438rem] shadow border-b-2 border-red-400 outline-none" /> 
                </div>

                <div class="flex flex-row justify-evenly items-center w-[25rem] mx-auto mt-6">
                    <button type="submit" class="w-[10rem] p-2 rounded border-2 border-red-300 text-red-400 hover:bg-red-300 hover:text-white transition duration-300">
                        Save
                    </button>
                    <a asp-controller="Region" asp-action="Index" class="w-[10rem] text-center p-2 rounded border-2 border-red-300 bg-red-300 text-white hover:bg-red-200 hover:border-red-200 transition duration-300">
                        Go back
                    </a>
                </div>
            </form>
        </section>
    </div>

</section>